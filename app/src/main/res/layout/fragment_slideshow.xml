<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#000000"
    android:gravity="center_horizontal"
    android:padding="30dp"
    android:orientation="vertical"
    android:layout_height="match_parent">

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#000000"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:id="@+id/frag"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="#000000"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/todo"
            android:src="@mipmap/finna"
            android:layout_marginTop="30dp"
            android:tint="@color/orange_400" />

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textAlignment="center"
    android:layout_marginTop="30dp"
    android:textColor="@color/orange_400"
    android:text="choose your wallet"
    android:textSize="30dp"
    android:textStyle="bold"></TextView>

    <Button

        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"

        android:id="@+id/iwallet"
        android:textColor="#ffffff"

android:background="@drawable/walleti"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"

        />
        <Button

            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            android:text="e WALLET"
            android:id="@+id/ewallet"
            android:textColor="#ffffff"
            android:background="@drawable/shapeorange"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="8dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="30sp"
            />




</LinearLayout>
</FrameLayout>
</ScrollView>

