<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="30dp"
    android:background="#000000"
    android:layout_height="match_parent"
    tools:context=".submit">
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/todo"
        android:src="@mipmap/finna"
        android:layout_marginTop="60dp"
        android:tint="@color/orange_400" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:padding="10dp"
        android:textSize="20dp"
        android:layout_marginTop="40dp"
        android:text="Ticket number 123456 logged sucessfully!!"
        android:textColor="#ffffff"></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20dp"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:text="Click ticket history for updates!"
        android:textColor="#ffffff"></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:padding="10dp"
        android:textAlignment="center"
        android:textSize="40dp"
        android:layout_marginTop="70dp"
        android:text="Thank you!"
        android:textColor="@color/orange_400"></TextView>

</LinearLayout>