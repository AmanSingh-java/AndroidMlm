<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_height="match_parent"
    tools:context=".transferEwallet">
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/todo"
        android:src="@mipmap/finna"
        android:layout_marginTop="60dp"
        android:tint="@color/orange_400" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:textColor="#ffffff"
        android:text="e wallet"
        android:textSize="30dp"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="40dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:text="e wallet amount"
            android:textSize="23dp"
            ></TextView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:hint="E Wallet Amount"
        android:textSize="25dp"
        android:id="@+id/ewalletamount"
        android:textColorHint="@color/orange_400"/>
    <Button
        android:layout_width="match_parent"
        android:text="send"
        android:textSize="30dp"
        android:layout_marginTop="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/sendewalletamount"
        android:background="@drawable/shapeorange"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    </LinearLayout>

