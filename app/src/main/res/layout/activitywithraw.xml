<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".withraw">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@null"
        android:theme="@style/AppTheme.NoActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/AppTheme.NoActionBar" />

    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".withraw">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="30dp"
            android:gravity="center">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:contentDescription="@string/todo"
            android:src="@mipmap/finna" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Withdraw Amount"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/background"
            android:textSize="20sp"
            android:textStyle="bold" />
        </LinearLayout>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/enteramount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/edt_ractangle_back"
            android:hint="enter amount"
            android:layout_margin="1dp"
            android:inputType="number"
            android:maxLength="50"
            android:maxLines="1"
            android:layout_weight="1"
            android:singleLine="true"
            android:textAlignment="center"
            android:textColor="@color/background"
            android:textColorHint="@color/orange_400"
            android:theme="@style/EditText.Grey" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fill Account details"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textColor="@color/orange_400"
            android:textSize="15sp"
            android:layout_margin="1dp"
            android:textStyle="bold" />


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/enterbankname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edt_ractangle_back"
            android:hint="enter bank name"
            android:inputType="text"
            android:maxLength="50"
            android:layout_margin="1dp"
            android:maxLines="1"
            android:layout_weight="1"
            android:singleLine="true"
            android:textAlignment="center"
            android:textColor="@color/background"
            android:textColorHint="@color/orange_400"
            android:theme="@style/EditText.Grey" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/enteraccountno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edt_ractangle_back"
            android:hint="enter account no."
            android:inputType="number"
            android:layout_margin="1dp"
            android:maxLength="50"
            android:maxLines="1"
            android:layout_weight="1"
            android:singleLine="true"
            android:textAlignment="center"
            android:textColor="@color/background"
            android:textColorHint="@color/orange_400"
            android:theme="@style/EditText.Grey" />


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/reenteraccountno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:background="@drawable/edt_ractangle_back"
            android:hint="Re-enter account no."
            android:inputType="number"
            android:maxLength="50"
            android:layout_margin="1dp"
            android:maxLines="1"
            android:singleLine="true"
            android:textAlignment="center"
            android:textColor="@color/background"
            android:textColorHint="@color/orange_400"
            android:theme="@style/EditText.Grey" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/enterifsccode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"

            android:background="@drawable/edt_ractangle_back"
            android:gravity="center"
            android:hint="enter IFSC code"
            android:inputType="text"
            android:maxLength="50"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_weight="1"
            android:textColor="@color/background"
            android:textColorHint="@color/orange_400"
            android:theme="@style/EditText.Grey" />


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/enterholdername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@drawable/edt_ractangle_back"
            android:hint=" Enter account holder name"
            android:inputType="text"
            android:maxLength="50"
            android:maxLines="1"
            android:singleLine="true"
            android:textAlignment="center"
            android:textColor="@color/background"
            android:textColorHint="@color/orange_400"
            android:theme="@style/EditText.Grey" />


        <Button
            android:id="@+id/confirmwithdraw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="@drawable/shapeorange"
            android:hint="enter account no."
            android:singleLine="true"
            android:layout_weight="1"
            android:text="confirm"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>





