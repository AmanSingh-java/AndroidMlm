<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@null"
    android:theme="@style/Theme.AppCompat.Dialog.Alert"
    android:layout_height="match_parent"
    tools:context=".Iwallet">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@null"
        android:theme="@style/AppTheme.NoActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/AppTheme.NoActionBar" />

    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom"
        android:backgroundTint="@android:color/white"
        android:orientation="vertical"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom"
            android:orientation="vertical"
            android:padding="10dp">
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/todo"
        android:src="@mipmap/finna"
        android:layout_marginTop="40dp" />

        <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I-wallet"
                android:textAlignment="center"
                android:textColor="@color/background"
                android:textSize="30dp"
                android:textStyle="bold" />

    </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="11000"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/background"
                android:textSize="20dp"
                android:id="@+id/amount"
                />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:background="@drawable/shapeorange"
            android:textStyle="bold"
            android:text="withdraw"
            android:id="@+id/withdraw"
            android:textSize="20dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="send to e wallet"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:background="@drawable/shapeorange"
            android:id="@+id/sendtoe"
            android:textStyle="bold"
            />
   <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
       android:textColor="@color/background"
        android:text="Earnings are the cashbacks won and referral commissions earned"
        android:textSize="20dp"/>

</LinearLayout>
    </LinearLayout>
</LinearLayout>