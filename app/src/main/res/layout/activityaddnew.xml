<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:gravity="center_horizontal"
    android:padding="30dp"
    android:orientation="vertical"
    tools:context=".ui.tools.Main2Activityaddnew">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
        android:textColor="@color/orange_400"
            android:text="Name"
            android:textSize="25dp"
            ></TextView>
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            android:background="@drawable/edt_ractangle_back"
            android:inputType="text"

            android:maxLength="50"
            android:layout_marginTop="10dp"
            android:maxLines="1"

            android:hint="enter name"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textColorHint="@color/orange_400"
            android:theme="@style/EditText.Grey" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
          android:textColor="@color/orange_400"
            android:text="Email id"
            android:textSize="25dp"
            ></TextView>
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edt_ractangle_back"
            android:inputType="textEmailAddress"

            android:maxLength="50"
            android:layout_marginTop="10dp"
            android:maxLines="1"

            android:hint="enter Email id"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textColorHint="@color/orange_400"
            android:theme="@style/EditText.Grey" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
        android:textColor="@color/orange_400"
            android:text="Contact no."
            android:textSize="25dp"
            ></TextView>
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edt_ractangle_back"
            android:inputType="number"

            android:maxLength="50"
            android:layout_marginTop="10dp"
            android:maxLines="1"

            android:hint="enter contect no."
            android:singleLine="true"
           android:textColor="#ffffff"
            android:textColorHint="@color/orange_400"
            android:theme="@style/EditText.Grey" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="Refer"
        android:background="@drawable/shapeorange"
        android:layout_marginTop="40dp"
        android:textSize="25dp"
        android:id="@+id/refer"
android:textColor="#ffffff"
android:textStyle="bold"
        android:hint="enter account no."
        android:singleLine="true"
        />

</LinearLayout>