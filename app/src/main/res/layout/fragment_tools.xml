<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:gravity="center_horizontal"
    android:background="#000000"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/todo"
        android:src="@mipmap/finna"
        android:layout_marginTop="60dp"
        android:tint="@color/orange_400" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center_horizontal"
       >
        <Button
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:layout_weight="1"
            android:background="@drawable/shapeorange"
            android:textStyle="bold"
            android:text="Add new Refferal"
            android:textColor="#ffffff"
            android:id="@+id/addnew"
            android:textSize="15dp"
            ></Button>
        <Button
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:text="My community network"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:background="@drawable/shapeorange"
            android:layout_marginLeft="15dp"
            android:id="@+id/mycommu"

            android:textStyle="bold"
            android:layout_marginTop="30dp"
            ></Button>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center_horizontal"
        >
        <Button
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            android:layout_weight="1"
            android:background="@drawable/shapeorange"
            android:textStyle="bold"
            android:text="Referral list"
            android:textColor="#ffffff"
            android:id="@+id/reflist"
            android:textSize="15dp"
            ></Button>
        <Button
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:text="Daily business"
            android:layout_weight="1"
            android:textSize="15dp"
            android:background="@drawable/shapeorange"
            android:layout_marginLeft="15dp"
            android:textColor="#ffffff"
            android:id="@+id/mybusiness"

            android:textStyle="bold"

            android:layout_marginTop="50dp"
            ></Button>

    </LinearLayout>
</LinearLayout>