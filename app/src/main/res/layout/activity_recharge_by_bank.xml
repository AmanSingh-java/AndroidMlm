<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context=".rechargeByBank">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@null"
        android:gravity="center"
        android:theme="@style/AppTheme.NoActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            app:popupTheme="@style/AppTheme.NoActionBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="center"
            android:gravity="center" />

    </com.google.android.material.appbar.AppBarLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:padding="10dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:backgroundTint="@android:color/white"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/finna"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Recharge By Bank"/>
    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_marginTop="20dp"
        android:hint="Trans_Type"
        android:textSize="25dp"
        android:textColor="@color/background"
        android:id="@+id/trans_type"
        android:background="@drawable/custom"
        android:textColorHint="@color/orange_400"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Name"
        android:textSize="25dp"
        android:textColor="@color/background"
        android:id="@+id/name_reachargebybank"
        android:background="@drawable/custom"
        android:textColorHint="@color/orange_400"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Amount"
        android:textColor="@color/background"
        android:textSize="25dp"
        android:id="@+id/amount_reachargebybank"
        android:background="@drawable/custom"
        android:textColorHint="@color/orange_400"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Payment_mode"
        android:textColor="@color/background"
        android:textSize="25dp"
        android:id="@+id/payment_mode"
        android:background="@drawable/custom"
        android:textColorHint="@color/orange_400"/>

    <Button
        android:layout_width="match_parent"
        android:text="send"
        android:textSize="30dp"
        android:layout_marginTop="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/send_reachargebybank"
        android:background="@drawable/shapeorange"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

</LinearLayout>
</LinearLayout>