<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    android:gravity="center_horizontal"
    tools:context=".topup">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Topup history"
        android:textColor="@color/orange_400"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"> </TextView>
    <HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="#000000"
        android:layout_height="wrap_content"
        tools:context=".ticket_history">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="#000000"
            android:layout_height="wrap_content"
            tools:context=".ticket_history">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="40dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/orange_400"
                    android:layout_marginTop="40dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="1"
                    android:textSize="20dp"
                    ></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/orange_400"
                    android:text="1234566"
                    android:layout_weight=".8"
                    android:textSize="20dp"
                    android:layout_marginLeft="30dp"
                    android:textStyle="bold"
                    android:layout_marginTop="40dp"
                    ></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="12/10/2019"
                    android:textColor="@color/orange_400"
                    android:layout_weight=".8"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="40dp"
                    ></TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:textColor="@color/orange_400"
                    android:layout_marginTop="40dp"
                    android:layout_weight=".8"
                    android:textStyle="bold"
                    android:text="Name1"
                    android:textSize="20dp"
                    ></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/orange_400"
                    android:text="Sucessfull"
                    android:layout_weight=".8"
                    android:textSize="20dp"
                    android:layout_marginLeft="30dp"
                    android:textStyle="bold"
                    android:layout_marginTop="40dp"
                    ></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="40dp"
                    android:layout_weight="1"
                    android:text="2"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    ></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="9876554"
                    android:layout_weight=".8"
                    android:textSize="20dp"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="40dp"
                    ></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="07/08/2019"
                    android:layout_weight=".8"
                    android:textSize="20dp"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="40dp"
                    ></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="40dp"
                    android:layout_weight=".8"
                    android:text="Name1"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    ></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Failed"
                    android:layout_weight=".8"
                    android:textSize="20dp"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="40dp"
                    ></TextView>

            </LinearLayout>


        </LinearLayout>




    </HorizontalScrollView>

</LinearLayout>