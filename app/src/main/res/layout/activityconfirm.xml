<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:padding="30dp"
    android:background="#000000"

    android:orientation="vertical"
    tools:context=".confirm">
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/todo"
        android:src="@mipmap/finna"
        android:layout_marginTop="50dp"
        android:tint="@color/orange_400" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="90dp"
        android:textStyle="bold"
        android:textColor="@color/orange_400"
        android:textSize="20dp"
        android:text="you have withrawn Rs.1000"> </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/orange_400"
        android:layout_marginTop="40dp"
        android:textSize="20dp"
        android:text="Amount debited from your current wallet and creadited in your account.">
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="90dp"
        android:textColor="@color/orange_400"
        android:textStyle="bold"
        android:textSize="30dp"
        android:text="Thank you."> </TextView>
</LinearLayout>

